{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
        {% for article in articles %}
            <h2> {{ article.title }}</h2><br>
            <img src="{{ article.picture }}"><br>
            <p>{{ article.content }}</p><br>
            <h4>{{ article.tag }}</h4>


        {% else %}
                <p>no records found</p>
        {% endfor %}
{% endblock %}
